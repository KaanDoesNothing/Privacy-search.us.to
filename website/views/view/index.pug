doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title View
        script(src="https://cdn.socket.io/3.1.3/socket.io.min.js")
        script(src="https://code.jquery.com/jquery-3.6.0.min.js")

        link(rel="stylesheet", type="text/css", href="/static/css/bulma.css")

    body()
        nav(class="navbar is-dark")
            div(class="navbar-menu")
                div(class="navbar-start")
                    a(class="navbar-item", id="web_browser_navigation_go_back")="<="
                    a(class="navbar-item", id="web_browser_navigation_go_forward")="=>"
                    a(class="navbar-item", id="web_browser_navigation_reload")="Reload"

                div(class="navbar-item")
                    form(id="web_browser_url_bar_form")
                        input(class="input", style="width: 300px !important;", id="web_browser_url_bar")
                div(class="navbar-end")
                    //- a(class="navbar-item")="Close"

        div(id="web_browser", style="display: table; overflow: hidden; width: 100%; height: 100%;")
            img(id="screen", style="width: 100%; height: 100%;", onmousemove="getMousePosition")
            script(defer, src="/static/js/view.js")